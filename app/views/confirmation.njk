{% extends '_layout.njk' %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block pageTitle %}Application complete - {{ serviceName }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {{ govukPanel({
      titleText: "Request sent",
      html: "Your reference number is<br><strong>" + reference + "</strong>"
    }) }}
    <p class="govuk-body"><a href="{{url}}">View amended parcels</a></p>
  </div>
</div>
{% endblock %}

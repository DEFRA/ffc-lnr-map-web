{
  "name": "ffc-lnr-map-web",
  "version": "0.2.0",
  "description": "Spike looking at editing and updating maps displayed on a customer interface which meets accessibility standards",
  "homepage": "https://github.com/DEFRA/ffc-lnr-map-web",
  "main": "app/index.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pretest": "npm run test:lint",
    "test": "jest --runInBand",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:watch:all": "npm-run-all --parallel test:watch build:watch",
    "test:lint": "standard",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "start:watch": "npm-run-all --parallel build:watch start:nodemon",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [
    "Steve Dickinson steve.dickinson@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@hapi/catbox-redis": "^6.0.2",
    "@hapi/cookie": "^11.0.2",
    "@hapi/crumb": "^8.0.1",
    "@hapi/hapi": "^20.1.5",
    "@hapi/inert": "^6.0.5",
    "@hapi/vision": "^6.1.0",
    "@hapi/yar": "^10.1.1",
    "@hapi/wreck": "^17.1.0",
    "@turf/turf": "^6.3.0",
    "applicationinsights": "^2.1.6",
    "govuk-frontend": "4.0.1",
    "hapi-pino": "^9.1.2",
    "joi": "^17.6.0",
    "nunjucks": "^3.2.3",
    "ol": "^6.5.0",
    "pg": "8.7.3",
    "pg-hstore": "2.3.4",
    "sequelize": "6.21.2"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "^5.0.1",
    "blipp": "^4.0.2",
    "cheerio": "^1.0.0-rc.10",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.0.6",
    "jest-junit": "^13.0.0",
    "mini-css-extract-plugin": "^2.5.3",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.5.1",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.49.7",
    "sass-loader": "^12.4.0",
    "standard": "^16.0.4",
    "style-loader": "^2.0.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "standard": {
    "env": {
      "jest": true
    },
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll",
      "XMLHttpRequest"
    ],
    "ignore": [
      "app/frontend/dist/**/*.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
